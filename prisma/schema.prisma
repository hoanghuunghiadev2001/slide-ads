generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
}

model Slide {
  id        Int      @id @default(autoincrement())
  title     String
  imageUrl  String
  position  Int      @default(0)
  createdAt DateTime @default(now())
}
